<h1>Reserve <%=  @car.make %> <%= @car.model %>(<%= @car.year %>)</h1>
<%= form_with(model: @reservation, local: true) do |form| %>
    <div class="field">
        <%= form.label :user_name %>
        <%= form.text_field :user_name %>
    </div>
    <div class="field">
        <%= form.label :user_email %>
        <%= form.email_field :user_email %>
    </div>
    <div class="field">
        <%= form.label :start_date %>
        <%= form.date_select :start_date %>
    </div>
    <div class="field">
        <%= form.label :end_date %>
        <%= form.date_select :end_date %>
    </div>
         <%= form.hidden_field :car_id, value: @car.id %>
    <div class="actions">
        <%= form.submit "Reserve" %>
    </div>
<% end %>

